    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navLinks = document.querySelector('.nav-links');

        mobileMenuBtn.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });

        // Close mobile menu when clicking on a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Gallery modal functionality
        const galleryItems = document.querySelectorAll('.gallery-item');
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        const closeModal = document.querySelector('.close-modal');

        galleryItems.forEach(item => {
            item.addEventListener('click', () => {
                const imgSrc = item.querySelector('img').src;
                modalImage.src = imgSrc;
                modal.style.display = 'flex';
            });
        });

        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Weather update functionality
        const updateWeatherBtn = document.getElementById('update-weather');
        const temperatureElement = document.querySelector('.temperature');
        const windElement = document.querySelector('.weather-details p:nth-child(1) strong');
        const seaConditionElement = document.querySelector('.weather-details p:nth-child(2) strong');
        const visibilityElement = document.querySelector('.weather-details p:nth-child(3) strong');
        const weatherStatusElement = document.querySelector('.weather-widget p:last-of-type');

        // Possible weather conditions
        const temperatures = [18, 19, 20, 21, 22, 23, 24, 25];
        const windSpeeds = ['8-10 узлов', '10-12 узлов', '12-14 узлов', '14-16 узлов', '16-18 узлов'];
        const seaConditions = ['Спокойное', 'Легкое', 'Умеренное', 'Сильное', 'Очень сильное'];
        const visibilities = ['Отличная', 'Хорошая', 'Умеренная', 'Плохая'];
        
        const weatherStatuses = [
            {text: 'Отличные условия для парусного спорта!', icon: 'fa-check-circle', color: '#159895'},
            {text: 'Хорошие условия для плавания', icon: 'fa-thumbs-up', color: '#57c5b6'},
            {text: 'Условия удовлетворительные', icon: 'fa-info-circle', color: '#ffb347'},
            {text: 'Плавание не рекомендуется', icon: 'fa-exclamation-triangle', color: '#ff6b6b'}
        ];

        function updateWeather() {
            // Randomly select weather conditions
            const temp = temperatures[Math.floor(Math.random() * temperatures.length)];
            const wind = windSpeeds[Math.floor(Math.random() * windSpeeds.length)];
            const sea = seaConditions[Math.floor(Math.random() * seaConditions.length)];
            const visibility = visibilities[Math.floor(Math.random() * visibilities.length)];
            
            // Determine weather status based on conditions
            let statusIndex;
            if (temp >= 22 && wind.includes('10-12') && sea === 'Умеренное') {
                statusIndex = 0;
            } else if (temp >= 20 && (wind.includes('8-10') || wind.includes('10-12')) && (sea === 'Легкое' || sea === 'Умеренное')) {
                statusIndex = 1;
            } else if (temp >= 18 && (wind.includes('12-14') || wind.includes('10-12')) && sea !== 'Очень сильное') {
                statusIndex = 2;
            } else {
                statusIndex = 3;
            }
            
            // Update DOM elements
            temperatureElement.textContent = `${temp}°C`;
            windElement.textContent = wind;
            seaConditionElement.textContent = sea;
            visibilityElement.textContent = visibility;
            
            const status = weatherStatuses[statusIndex];
            weatherStatusElement.innerHTML = `<i class="fas ${status.icon}"></i> ${status.text}`;
            weatherStatusElement.style.color = status.color;
            
            // Add animation
            weatherStatusElement.style.transform = 'scale(1.05)';
            setTimeout(() => {
                weatherStatusElement.style.transform = 'scale(1)';
            }, 300);
        }

        updateWeatherBtn.addEventListener('click', updateWeather);

        // Initialize with random weather on page load
        window.addEventListener('DOMContentLoaded', () => {
            updateWeather();
        });

        // Sticky header on scroll
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.backgroundColor = 'rgba(26, 95, 122, 0.95)';
            } else {
                header.style.backgroundColor = 'var(--primary-color)';
            }
        });
    </script>
</body>
</html>
